<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.dbc.java_collections_roadmap.controller.SortElementsController">

    <children>
      <Label alignment="CENTER" contentDisplay="CENTER" text="To store unique elements, you can use java.util.Set">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
        <Label text="Do you need to sort the elements?">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="setSortingYesButton" mnemonicParsing="false" text="Yes!">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="setSortingNoButton" mnemonicParsing="false" text="No!">
                    <HBox.margin>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>


</VBox>
